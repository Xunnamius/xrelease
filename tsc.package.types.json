/**
 ** This file extends the project root tsconfig.json file for use with tsc at
 ** the package level.
 **
 ** Use this file to exert some control over how tsc generates package-specific
 ** definition files.
 */

{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": false,
    "noEmit": false,
    "outDir": ".",
    "rootDir": "./"
  },
  // ? Include patterns are also used by tooling like eslint (using node glob)
  "include": ["index.js", "cli.js", "lib/**/*"]
}
